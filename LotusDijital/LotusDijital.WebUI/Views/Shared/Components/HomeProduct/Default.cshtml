@model List<ProductModel>

<div class="container-fluid vesitable py-5">
    <div class="container py-5">
        <h1 class="mb-0">Ürünler</h1>
        <div class="owl-carousel vegetable-carousel justify-content-center">
            @foreach (var product in Model.Where(p => p.IsActive && p.IsHome))
            {
                <div class="border border-primary rounded position-relative vesitable-item">
                    <div class="vesitable-img">
                        <img src="@Jobs.ImageRoute/@product.SmallImage" class="img-fluid w-50 rounded-top" alt="">
                    </div>
                    <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@product.Title</div>
                    <div class="p-4 rounded-bottom">
                        <h4>@product.Name</h4>
                        <div class="d-flex justify-content-between flex-lg-wrap">
                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Detay </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>