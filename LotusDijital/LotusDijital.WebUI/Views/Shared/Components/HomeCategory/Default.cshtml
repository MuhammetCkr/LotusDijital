@model List<CategoryModel>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Kategorilere göre Ürünler</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        @{
                            var indexCategory = 1;
                        }
                        @foreach (var category in Model.Where(c => c.IsActive))
                        {

                            if (indexCategory == 1)
                            {
                                <li class="nav-item">
                                    <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-@indexCategory">
                                        <span class="text-dark" style="width: 130px;">@category.Name</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="d-flex m-2 py-2 bg-light rounded-pill " data-bs-toggle="pill" href="#tab-@indexCategory">
                                        <span class="text-dark" style="width: 130px;">@category.Name</span>
                                    </a>
                                </li>
                            }
                            indexCategory++;
                        }
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                @{
                    var indexProduct = 1;
                }
                @foreach (var category in Model.Where(c => c.IsActive))
                {
                    if (indexProduct == 1)
                    {
                        <div id="tab-@indexProduct" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="row g-4">
                                        @foreach (var product in category.Products.Where(c => c.IsActive))
                                        {
                                            <div class="col-md-6 col-lg-4 col-xl-3">
                                                <div class="rounded position-relative fruite-item">
                                                    <div class="fruite-img">
                                                        <img src="@Jobs.ImageRoute/@product.SmallImage" class="img-fluid w-100 rounded-top" alt="">
                                                    </div>
                                                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.Title</div>
                                                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                        <h4>@product.Name</h4>
                                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Detay </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div id="tab-@indexProduct" class="tab-pane fade show p-0">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="row g-4">
                                        @foreach (var product in category.Products.Where(c => c.IsActive))
                                        {
                                            <div class="col-md-6 col-lg-4 col-xl-3">
                                                <div class="rounded position-relative fruite-item">
                                                    <div class="fruite-img">
                                                        <img src="@Jobs.ImageRoute/@product.SmallImage" class="img-fluid w-100 rounded-top" alt="">
                                                    </div>
                                                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.Title</div>
                                                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                        <h4>@product.Name</h4>
                                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    indexProduct++;
                }
            </div>
        </div>
    </div>
</div>