@model List<ProductModel>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ürünleri Yönet</h1>
                </div>
                <div class="col-sm-6 d-flex justify-content-end">
                    <a class="btn btn-sm btn-primary" asp-area="Admin" asp-controller="Product" asp-action="AddProduct">Ürün Ekle</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <table id="productTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Ad</th>
                                        <th>Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.OrderBy(x => x.Id))
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td></td>
                                            <td>
                                                <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Product" asp-action="EditProduct"
                                                   asp-route-id="@product.Id">Düzenle</a>
                                                @*                                                 <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory"
                                            asp-route-id="@category.Id">Sil</a> *@
                                                <a class="btn btn-danger btn-sm" onclick="deleteProduct(@product.Id)">Sil</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Ad</th>
                                        <th>Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section Css {
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@section Scripts {
    <!-- DataTables  & Plugins -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/jszip/jszip.min.js"></script>
    <script src="~/admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script>
        $(function () {
            $("#productTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "excel", "pdf"]
            }).buttons().container().appendTo('#productTable_wrapper .col-md-6:eq(0)');
        });
    </script>

    <script>
        function deleteProduct(id) {
            console.log(id);
            Swal.fire({
                title: "Emin misin?",
                text: "Ürün kalıcı olarak silinecek!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, sil!",
                cancelButtonText: "İptal"
            }).then((res) => {
                if (res.isConfirmed) {
                    $.ajax({
                        type: 'GET',
                        url: '/Admin/Product/DeleteProduct',
                        data: { id: id },
                        success: function (result) {
                            if (result.status == 200) {
                                Swal.fire(
                                    'Bilgilendirme',
                                    'Ürün Silindi',
                                    'success'
                                ).then((ok) => {
                                    if (ok.isConfirmed) {
                                        location.reload();
                                    }
                                });
                            } else {
                                Swal.fire(
                                    'HATA',
                                    'Ürün Silinemedi',
                                    'error'
                                )
                            }
                        }
                    });

                }
            });
        }

    </script>
}

